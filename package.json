{
  "name": "tiny-ansi-colors",
  "version": "0.0.1",
  "description": "yet another ansi color module. bare bones & tiny. limited api, 16 colors only.",
  "main": "./lib/tiny-ansi-colors.js",
  "scripts": {
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "build": "npm run build:lib && npm run build:es && npm run build:dist",
    "prebuild:lib": "rimraf lib && mkdir lib",
    "build:lib": "cross-env BABEL_ENV=lib babel src -o ./lib/index.js",
    "prebuild:es": "rimraf es && mkdir es",
    "build:es": "cross-env BABEL_ENV=es babel src -o ./es/index.mjs",
    "prebuild:dist": "rimraf dist && mkdir dist",
    "build:dist": "cross-env BABEL_ENV=dist babel src -o ./dist/tiny-ansi-colors.js",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint .",
    "pretest": "rimraf .nyc_output coverage",
    "test": "cross-env NODE_ENV=instrument nyc mocha"
  },
  "keywords": [
    "ansi",
    "escape",
    "terminal",
    "colors",
    "colours"
  ],
  "files": [
    "lib",
    "es",
    "dist"
  ],
  "author": "Tyler Waters <tyler.waters@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tswaters/tiny-ansi-colors.git"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-plugin-transform-es3-member-expression-literals": "^6.22.0",
    "babel-plugin-transform-es3-property-literals": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.2.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "eslint": "^4.13.1",
    "eslint-config-tswaters": "github:tswaters/eslint-config-tswaters",
    "mocha": "^4.0.1",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
